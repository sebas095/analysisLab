<div class="row">
  <% if (message.length > 0) { %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p><%= message %></p>
    </div>
  <% } %>
  <div class="col-xs-12 col-sm-12">
    <h3>Búsqueda de Cotización</h3>
    <form class="form-horizontal" action="/quotation/search" method="post">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Ingresa número de la cotización o el Nit/C.C. de la empresa..." name="id">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
    </form>
  </div>
</div>
