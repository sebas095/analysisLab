<% include ../header.ejs %>
<% include ../nav.ejs %>
  <% if (message.length > 0) { %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p><%= message %></p>
    </div>
  <% } %>
  <div class="container-fluid">
    <div class="col-xs-12">
      <form class="form-horizontal space-bottom" action="/quotation/search" method="post">
        <div class="input-group">
          <input type="text" class="form-control" name="id" placeholder="Ingresa número de la cotización o el Nit/C.C. de la empresa..." name="id">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
      </form>
      <div class="panel panel-default quotation">
        <div class="panel-body">
          <div class="col-xs-11">
            <strong>Cotización N° 1</strong>
            <p class="text-muted">816.006.458 - Los pinos s.a</p>
          </div>
          <div class="col-xs-1 icon-align">
            <i class="fa fa-eye" aria-hidden="true"></i>
          </div>
        </div>
      </div>
      <div class="panel panel-default quotation">
        <div class="panel-body">
          <div class="col-xs-11">
            <strong>Cotización N° 2</strong>
            <p class="text-muted">816.006.458 - Los pinos s.a</p>
          </div>
          <div class="col-xs-1 icon-align">
            <i class="fa fa-eye" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
<% include ../footer.ejs %>
    <script type="text/javascript">
      $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
      });
    </script>
  </body>
</html>
