<% include ../header.ejs %>
<% include ../nav.ejs %>
  <% if (message.length > 0) { %>
    <div class="alert alert-info alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p><%= message %></p>
    </div>
  <% } %>
  <div class="container-fluid">
    <div class="col-xs-12">
      <form class="form-horizontal space-bottom" action="/labaguasyalimentos/quotation/search" method="get">
        <div class="input-group">
          <input type="text" class="form-control" name="id" placeholder="Ingresa número de la cotización o el Nit/C.C. de la empresa..." name="id">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
      </form>
      <% if (quotations.length > 0) { %>
        <% for (let quotation of quotations) { %>
          <div class="panel panel-default quotation">
            <div class="panel-body">
              <div class="col-xs-11">
                <strong>Cotización N° <%= quotation._id %></strong>
                <p class="text-muted"><%= quotation.document %> - <%= quotation.businessName %></p>
              </div>
              <div class="col-xs-1 icon-align">
                <a href="/quotation/<%= quotation._id %>"><i class="fa fa-eye" aria-hidden="true"></i></a>
              </div>
            </div>
          </div>
        <% } %>
      <% } else if (results.length > 0) { %>
        <% for (let quotation of results) { %>
          <div class="panel panel-default quotation">
            <div class="panel-body">
              <div class="col-xs-11">
                <strong>Cotización N° <%= quotation._id %></strong>
                <p class="text-muted"><%= quotation.document %> - <%= quotation.businessName %></p>
              </div>
              <div class="col-xs-1 icon-align">
                <a href="/labaguasyalimentos/quotation/<%= quotation._id %>"><i class="fa fa-eye" aria-hidden="true"></i></a>
              </div>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
<% include ../footer.ejs %>
    <script type="text/javascript">
      $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
      });
    </script>
  </body>
</html>
