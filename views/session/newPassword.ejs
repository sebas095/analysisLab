<% include ../header.ejs %>
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <div class="title">
        <h1>RECUPERAR CONTRASEÑA</h1>
        <% if (message.length > 0) { %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><%= message %></p>
          </div>
        <% } %>
      </div>
      <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-lg-offset-3 col-lg-6">
        <form class="form-horizontal panel panel-default" action="/labaguasyalimentos/account/emailRecovery" method="post">
          <div class="panel-body">
            <div class="form-group">
              <div class="col-xs-12 col-sm-12 col-lg-12">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                  <input type="email" class="form-control" name="email" id="email" placeholder="Correo electrónico" required>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-12 col-sm-12 col-lg-12">
                <button class="btn col-xs-12 col-sm-offset-3 col-sm-6 btn-color-blue">Enviar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="/labaguasyalimentos/bootstrap/js/jquery-3.2.1.min.js"></script>
  <script src="/labaguasyalimentos/bootstrap/js/bootstrap.min.js"></script>
  <script src="/labaguasyalimentos/js/navbar.js"></script>
  <script type="text/javascript">
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("active");
    });
  </script>
  </body>
</html>
