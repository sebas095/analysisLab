<div class="row">
  <h3>Registro de usuario</h3>
  <form class="" action="/users/register" method="post">
    <div>
      <label for="firstname">Nombre(s)</label>
      <input type="text" name="firstname" id="firstname">
    </div>
    <div>
      <label for="lastname">Apellido(s)</label>
      <input type="text" name="lastname" id="lastname">
    </div>
    <div>
      <label for="rol">Rol</label>
      <select name="rol" id="rol">
        <%# <option value="administrador">Administrador</option>%>
        <option value="responsable técnico">Responsable Técnico</option>
        <option value="director del laboratorio" selected>Director del Laboratorio</option>
        <option value="técnico del laboratorio">Técnico del Laboratorio</option>
        <option value="auxiliar administrativo">Auxiliar Administrativo</option>
      </select>
    </div>
    <% if (!isAdmin) { %>
      <div>
        <input type="checkbox" name="status" value="admin">
        <label for="status">¿Eres Administrador del Sistema?</label>
      </div>
    <% } %>
    <div>
      <label for="email">Correo Electrónico</label>
      <input type="email" name="email" id="email">
    </div>
    <div>
      <label for="password">Contraseña</label>
      <input type="password" name="password" id="password">
    </div>
    <button class="btn btn-success">Enviar</button>
  </form>
</div>
